{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "MAILCHIMP_API_KEY",
        "MAILCHIMP_SERVER",
        "MAILCHIMP_AUDIENCE_ID",
        "NEXT_PUBLIC_FLOE_API_KEY_ID",
        "FLOE_API_KEY_SECRET",
        "NEXT_PUBLIC_FLOE_BASE_URL"
      ]
    },
    "clean": {
      "cache": false
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
