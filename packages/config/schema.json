          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "rulesets": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "include": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "rules": {
                "type": "object",
                "additionalProperties": {
                  "type": "string",
                  "enum": [
                    "error",
                    "warn",
                    "off"
                  ]
                }
              }
            },
            "required": [
              "include",
              "rules"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "$schema",
        "rules",
        "rulesets"
      ],
      "additionalProperties": false
    }
  }
