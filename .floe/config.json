{
  "$schema": "https://unpkg.com/@floe/config@0.1.0-alpha.5/schema.json",
  "reviews": {
    "maxFileEvaluations": 5,
    "maxDiffEvaluations": 20
  },
  "rulesets": {
    "docs": {
      "include": ["apps/web/pages/docs/**.*mdx"],
      "rules": {
        "spelling-and-grammar": "error"
      }
    },
    "blog": {
      "include": ["apps/web/pages/blog/**.*mdx"],
      "rules": {
        "spelling-and-grammar": "error"
      }
    }
  }
}
