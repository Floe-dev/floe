{
  "rules": {
    "no-passive-voice": "Do not use passive voice.",
    "always-use-headers": "Always use headers in markdown files."
  },
  "rulesets": {
    "docs": {
      "include": ["**/*.md"],
      "rules": {
        "no-passive-voice": "error",
        "always-use-headers": "error"
      }
    }
  },
  "prompts": {
    "release-notes": {
      "template": ".floe/templates/release-note.md",
      "ruleSets": ["docs"],
      "outdir": "release-notes"
    }
  }
}
