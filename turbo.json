{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "PORT",
        "NODE_ENV",
        "VERCEL_URL",
        "VERCEL",
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "APP_ID",
        "PRIVATE_KEY",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "SKIP_ENV_VALIDATION",
        "SENDGRID_API",
        "FLOE_SECRET_KEY",
        "FLOE_SECRET_IV",
        "OPENAI_API_KEY",
        "MAILCHIMP_API_KEY",
        "MAILCHIMP_SERVER",
        "MAILCHIMP_AUDIENCE_ID",
        "PINECONE_API_KEY",
        "PINCECONE_INDEX"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
